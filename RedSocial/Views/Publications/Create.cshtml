@using Microsoft.AspNetCore.Http
@using RedSocial.Core.Application.Dtos.Account
@using RedSocial.Core.Application.Helpers;
@model RedSocial.Core.Application.Viewmodel.PublicationViewModel.PublicationPostViewModel;

@inject IHttpContextAccessor httpContext;
@{
    Layout = null;
    var user = httpContext.HttpContext.Session.get<AuthenticationResponse>
         ("User");
   
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="mdo">Make Post</button>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Make Post</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    
                </div>
                <div class="modal-body">
                    <form asp-controller="Publications" class="create" asp-action="Create" method="post" enctype="multipart/form-data">

             

                        <div class="mb-3">
                            <label for="message-text" class="col-form-label">Description:</label>
                            <textarea class="form-control descrip" asp-for="Text" id="message-text"></textarea>
                         
                        </div>

                        <div class="mb-3">
                            <label for="message-text" class="col-form-label">Image:</label>
                            <input type="file" placeholder="Image" asp-for="file" class="mt-3 form-control">
                            <input asp-for="IdenityUserId" value="@user.Id" type="hidden" />
                        </div>

                        <div class="mb-3">
                            <label for="message-text" class="col-form-label">Video:</label>
                            <input type="text" placeholder="Video" asp-for="MediaPublicationVideo" class="mt-3 form-control">

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Post</button>

                        </div>
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">New Post</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                    </div>


                                </div>
                            </div>
                        </div>

                    </form>
                </div>
               
            </div>
        </div>
    </div>
   
</body>
</html>
