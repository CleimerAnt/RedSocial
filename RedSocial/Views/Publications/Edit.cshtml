@using Microsoft.AspNetCore.Http
@using RedSocial.Core.Application.Dtos.Account
@using RedSocial.Core.Application.Helpers;
@model RedSocial.Core.Application.Viewmodel.PublicationViewModel.PublicationPostViewModel;

@inject IHttpContextAccessor httpContext;
@{
    Layout = null;
    var user = httpContext.HttpContext.Session.get<AuthenticationResponse>
         ("User");

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/style.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap"
          rel="stylesheet" />
</head>
<body>

    <div class="d-flex align-items-center justify-content-center container mt-4">
        <form enctype="multipart/form-data" method="post" class="w-25 bg-primary p-3" asp-controller="Publications" asp-action="Edit">
            <div class="p-2 bg-primary mb-2 ">
                <h1 style="color: white;" class="text-center ">Edit</h1>
            </div> @Html.ValidationSummary(false, "", new { @class = "text-white" })

            <textarea asp-for="Text" class="form-control w-100 mb-3 p-2" placeholder="Description:">  
               </textarea>

               
            <input asp-for="file" type="file" class="form-control w-100 mb-3 p-2" >

            <input asp-for="MediaPublicationVideo" class="form-control w-100 mb-3 p-2" placeholder="Video">


            <input type="hidden" asp-for="IdenityUserId" value="@user.Id"/>

            <div class="d-flex  justify-content-end align-items-end" style="gap:10px;">
                <a asp-controller="Publications" asp-action="Index" asp-route-userId="@user.Id" class="btn btn-secondary font-weight-bold ">Cancelar</a>
                <button type="submit" class="btn btn-primary  font-weight-bold">Agregar</button>
            </div>
        </form>
    </div>

</body>
</html>
