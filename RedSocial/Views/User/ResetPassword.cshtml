<section>
    <div class="container">
        <div class="row">

            <div class="col-6 mt-4">
                <img class="logo__img"
                     src="~/img/image_processing20191202-14263-ydyw15.png"
                     alt="" />
            </div>

            <div class="col-6">


                <h1 class="mt-5 mb-5 m-2 titulo__login">Reset Password</h1>


                @if (Model.HasError)
                {
                    <p class="text-secondary mt-3">@Model.Error</p>
                    <!--   <button type="button" class="btn-close text-white" data-bs-dismiss="alert" aria-label="Close"></button>-->
                }
                @Html.ValidationSummary(false, "", new { @class = "text-secondary" })

                <form enctype="multipart/form-data" asp-controller="User" asp-action="ResetPassword" method="post">


                    <div class="row">
                       
                            <input class="mt-4 m-2 input__login--emailOrUserName text-white w-75"
                                   type="text"
                                   asp-for="Email" placeholder="Email" />

                        <input class="mt-4 m-2 input__login--emailOrUserName text-white w-75"
                                   type="text"
                                   placeholder="Password" asp-for="PassWord" />

                        <input class="mt-4 m-2 input__login--emailOrUserName text-white w-75"
                                   type="text"
                                   placeholder="Confirn Password" asp-for="ConfirnPasword" />

                            <input type="hidden" asp-for="Token" />
                       
                    </div>
                    <div class="d-flex align-items-center justify-content-center ">
                        <button class="btn btn-secondary mt-3  w-50 enviar__resetPassword float-center" style="margin-left:28px ;">
                            Next
                        </button>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</section>


