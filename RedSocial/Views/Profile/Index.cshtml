@using RedSocial.Core.Application.Dtos.Account
@using RedSocial.Core.Application.Helpers;
@model RedSocial.Core.Application.Viewmodel.AccounsViewModel.UserPostViewModel;
@inject IHttpContextAccessor httpContext;
@{

    Layout = null;
    var user = httpContext.HttpContext.Session.get<AuthenticationResponse>
         ("User");
}

<!DOCTYPE html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/style.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap"
          rel="stylesheet" />
</head>
<body>
    <section class="container">
        <div class="row">
            <div class="col-4">
                <p class="img__home mt-3">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                        <!--!Font Awesome Free 6.5.1 by fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
                        <path fill="#e2e5e9"
                              d="M389.2 48h70.6L305.6 224.2 487 464H345L233.7 318.6 106.5 464H35.8L200.7 275.5 26.8 48H172.4L272.9 180.9 389.2 48zM364.4 421.8h39.1L151.1 88h-42L364.4 421.8z" />
                    </svg>
                </p>


                @if (user is not null)
                {
                    <a style="text-decoration: none; color: white;" class="CerrarSesion" asp-area="" asp-controller="User" asp-action="CerrarSesion">Sign Out(@user.UserName)</a>
                }
                <br />

                <div class="mt-4 text-white d-flex  mb-5">
                    <ul class="d-flex nav justify-content-center flex-column mt-2"
                        style="margin-left: ">
                        <li><a asp-controller="Publications" asp-action="Index" asp-route-userId="@user.Id">Para Ti</a></li>
                        <li><a asp-controller="Friends" asp-action="Index" asp-route-userId="@user.Id">Amigos</a></li>
                        <li class="opcion__select"><a asp-controller="Profile" asp-action="Index" asp-route-userIde="@user.Id">Mi Perfil</a></li>
                      
                    </ul>
               

            </div>

           </div>     
              
            <div class="col-8">
                    <div class="d-flex  align-items-center mt-3  w-100" style="margin-right: 30px;">
                    <form enctype="multipart/form-data" method="post" style="background-color: #7532FA;" class="w-75 p-3" asp-controller="Profile" asp-action="Update">
                            <div class="p-2 mb-2 ">
                            <h1 style="color: white; background-color: #7532FA;" class="text-center">Edit User</h1>
                            </div> @Html.ValidationSummary(false, "", new { @class = "text-white" })

                            <input class="form-control w-100 mb-3 p-2" placeholder="First Name" asp-for="FirstName">

                            <input class="form-control w-100 mb-3 p-2" placeholder="Lats Name" asp-for="LastName">

                            <input class="form-control w-100 mb-3 p-2" placeholder="Phone Number" asp-for="PhoneNumber">

                        

                            <input class="form-control w-100 mb-3 p-2" placeholder="Email" asp-for="Email">

                            <input class="form-control w-100 mb-3 p-2"  type="file" placeholder="Foto de Perfil" asp-for="file">
                            
                            <input class="form-control w-100 mb-3 p-2" placeholder="Password" type="password" asp-for="PassWord">

                            <input class="form-control w-100 mb-3 p-2" placeholder="Confirn Password" type="password" asp-for="ConfirnPasword">

                            <input type="hidden" name="userIde" value="@user.Id" />

                            <input type="hidden" asp-for="Id" value="@user.Id"/>

                            <div class="d-flex  justify-content-end align-items-end" style="gap:10px;">
                                <a asp-controller="Publications" asp-route-userId="@user.Id" asp-action="Index" class="btn btn-secondary text-white font-weight-bold ">Cancelar</a>
                                <button type="submit" class="btn btn-primary  font-weight-bold">Agregar</button>
                            </div>
                        </form>
                    </div>

            </div>



        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>